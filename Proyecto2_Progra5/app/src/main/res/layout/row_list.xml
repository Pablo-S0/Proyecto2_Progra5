<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#ECEAFD"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:layout_margin="8dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listID"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:textSize="16sp"
            />


        <ImageView
            android:id="@+id/listimagen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"/>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listDetalle"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:textSize="14sp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listMesas"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listSillas"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listCatering"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listComparsa"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listDiscoMovil"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listCentros"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listMonto"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:textSize="14sp"
            />



    </LinearLayout>



</LinearLayout>
