@model Usuarios
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<form asp-area="" asp-controller="Login" asp-action="Login" method="post">

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card" style="border-radius: 1rem;  background-color: skyblue;">
                    <div class="card-body p-5 text-center">
                            <a style="float:left" class="btn btn-outline-dark" asp-area="" asp-controller="Home" asp-action="Index">Volver</a>
                            <br />
                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">Bienvenidos</h2>
                            <div asp-validation-summary="All"></div>
                            <div class="form-outline form-white mb-4">
                                    <input asp-for="Correo" name="correo" type="email" class="form-control form-control-lg" placeholder="Correo" />
                                <span asp-validation-for="Correo" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                    <input asp-for="Clave" name="clave" type="password" class="form-control form-control-lg" placeholder="Clave" />
                                <span asp-validation-for="Clave" class="text-danger"></span>
                            </div>


                                <button type="submit" class="btn btn-outline-dark btn-lg px-5">Log in</button>
                        </div>

                        <div>
                            <p class="mb-0">
                                No tienes una cuenta? <a asp-controller="Login" asp-action="Registrarse" class="text-white">Registrarse</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
</form>