@model Usuarios
@{
    ViewData["Title"] = "Nuevo Usuario";
    Layout = null;
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<section class="vh-100" >
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px; background-color: skyblue;">
                    <div class="card-body p-md-5" >
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <a class="btn btn-outline-dark" asp-area="" asp-controller="Home" asp-action="Index">Volver</a>
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Registrarse</p>

                                <form method="post" class="mx-1 mx-md-4">
                                   
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Cedula" type="text" class="form-control" placeholder="Cedula" />
                                            <span asp-validation-for="Cedula" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Nombre" type="text" class="form-control" placeholder="Nombre" />
                                            <span asp-validation-for="Nombre" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Correo" type="e mail" class="form-control" placeholder="Email" />
                                            <span asp-validation-for="Correo" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Clave" type="password" class="form-control" placeholder="Contraseña" />
                                            <span asp-validation-for="Clave" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Telefono" type="text" class="form-control" placeholder="Telefono" />
                                            <span asp-validation-for="Telefono" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div>
                                        <input asp-for="RolId" type="hidden" value="2" class="form-control" />
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button asp-controller="Login" asp-action="Registrarse" type="submit" class="btn btn-outline-dark btn-lg px-5 " style="margin-right: 10px;">Registrarse</button>
                                       
                                        
                                    </div>
                                    <p class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">¿Ya tienes una cuenta? <a asp-controller="Login" asp-action="Login" class="text-white"> Login</a></p>
                                </form>

                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>